<h1>New Lesson</h1>

<%= form_for @lesson do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :number %>
  <%= f.text_field :number %>
  <%= f.submit  %>
<% end %>


<% if @lesson.errors.any? %>
  <h3>No Soup for you!</h3>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<hr>

<%= link_to "back to Index", lessons_path %>
